# Core runtime pieces typically needed by ROS 2 deployments
BR2_PACKAGE_BASH=y
BR2_PACKAGE_CMAKE=y
BR2_PACKAGE_PYTHON3=y

# Root filesystem image (raw ext4 copied into a secondary partition)
BR2_ROOTFS_OVERLAY="board/myfastboot/ros2-overlay"
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="2048M"
BR2_TARGET_ROOTFS_EXT2_LABEL="ros2"
# BR2_TARGET_ROOTFS_TAR is not set
