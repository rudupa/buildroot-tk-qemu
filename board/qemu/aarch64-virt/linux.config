# Core platform
CONFIG_ARCH_VIRT=y
CONFIG_ARM64=y

# Console (QEMU virt uses PL011 UART)
CONFIG_SERIAL_AMBA_PL011=y
CONFIG_SERIAL_AMBA_PL011_CONSOLE=y

# Device filesystem
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Initramfs support
CONFIG_BLK_DEV_INITRD=y
CONFIG_INITRAMFS_SOURCE=""
CONFIG_INITRAMFS_COMPRESSION_LZ4=y

# Compression for kernel image
CONFIG_KERNEL_LZ4=y

# Essential block device (optional if you want disk rootfs)
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_MMIO=y

# Filesystems (only if you want /tmp or ext4 rootfs)
CONFIG_TMPFS=y
CONFIG_TMPFS_POSIX_ACL=n
CONFIG_EXT4_FS=n

# Disable everything else
CONFIG_NET=n
CONFIG_MODULES=n
CONFIG_IPC_NS=n
CONFIG_SYSVIPC=n
CONFIG_POSIX_MQUEUE=n
CONFIG_SOUND=n
CONFIG_USB=n
CONFIG_ACPI=n
CONFIG_PCI=n
CONFIG_DRM=y
CONFIG_DRM_VIRTIO_GPU=y
CONFIG_FB=y
CONFIG_FB_SIMPLE=y
CONFIG_FRAMEBUFFER_CONSOLE=y
CONFIG_DRM_KMS_HELPER=y
CONFIG_DRM_TTM=y
